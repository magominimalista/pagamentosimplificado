{
    "name": "magominimalista/pagamentosimplificado",
    "description": "Um sistema simples de pagamento",
    "type": "project",
    "keywords": [
      "Mago Minimalista",
      "Classe Login"
    ],
    "authors": [
        {
          "name": "Mago Minimalista",
          "email": "contato@magominimalista.com.br"
        }
    ],
    "license": "GPL-3.0",
    "require": {
        "corviz/br-gpdpl": "^1.2",
        "doctrine/annotations": "^1.13",
        "doctrine/dbal": "^3.4",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "2.13.1",
        "guzzlehttp/guzzle": "^7.4",
        "mikecao/flight": "^2.0",
        "monolog/monolog": "^3.2",
        "nette/forms": "^3.1",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "ramsey/uuid": "^4.4",
        "respect/validation": "^2.2",
        "sinergi/browser-detector": "^6.1",
        "symfony/cache": "^6.1",
        "symfony/dotenv": "^6.1",
        "symfony/mailer": "^6.1",
        "symfony/yaml": "^6.1",
        "twig/twig": "^3.4"
    },
    "require-dev": {
        "filp/whoops": "^2.14",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Src\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Testes\\": "tests/"
        }
    },
    "scripts": { 
        "servidor": "php -S localhost:8000",
        "cs": "phpcs --standard=PSR12 src/",
        "check": [
            "@cs"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as verificações do código. PHAN e PHPCS"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
